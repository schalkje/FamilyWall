{
  "App": {
    "Photos": {
      "Sources": [
        {
          "Type": "Local",
          "Path": "C:\\repo\\pictures",
          "Enabled": true,
          "Priority": 0
        }
      ],
      "CacheSizeMb": 500,
      "PrefetchCount": 10,
      "SlideshowIntervalSeconds": 5
    },
    "Calendar": {
      "Providers": [ "Graph" ],
      "CacheTtlMinutes": 15,
      "ShowBirthdays": true
    },
    "Graph": {
      "ClientId": "cb394926-7118-4e3a-8507-885a30f376be",
      "TenantId": "consumers",
      "Scopes": [ "User.Read", "Calendars.Read", "Files.Read" ],
      "Enabled": true,
      "CalendarIds": []
    },
    "NightMode": {
      "StartTime": "22:00:00",
      "EndTime": "07:00:00",
      "Enabled": true,
      "MotionThreshold": 30,
      "InactivityTimeoutSeconds": 30
    },
    "HomeAssistant": {
      "BaseUrl": "",
      "Enabled": false
    },
    "Mqtt": {
      "Broker": "localhost",
      "Port": 1883,
      "TopicPrefix": "home/surface_panel",
      "Enabled": false
    },
    "Privacy": {
      "RecordingConsent": false,
      "NightModeRecordingEnabled": true,
      "RetentionDays": 3
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  }
}
