@page "/calendar"
@using Microsoft.EntityFrameworkCore
@using FamilyWall.Core.Models
@using FamilyWall.Services
@using FamilyWall.App.ViewModels
@inject ICalendarService CalendarService
@inject ICalendarEventService EventService
@inject CalendarSyncService SyncService
@inject NavigationManager Navigation

<div class="calendar-container">
    <div class="calendar-header">
        <div class="header-content">
            <h1>üìÖ Calendar</h1>
            <div class="header-actions">
                <!-- View Switcher -->
                <div class="view-switcher">
                    <button class="view-btn @(currentView == CalendarViewModel.ViewMode.Month ? "active" : "")"
                            @onclick="() => SwitchView(CalendarViewModel.ViewMode.Month)">
                        Month
                    </button>
                    <button class="view-btn @(currentView == CalendarViewModel.ViewMode.Week ? "active" : "")"
                            @onclick="() => SwitchView(CalendarViewModel.ViewMode.Week)">
                        Week
                    </button>
                    <button class="view-btn @(currentView == CalendarViewModel.ViewMode.Agenda ? "active" : "")"
                            @onclick="() => SwitchView(CalendarViewModel.ViewMode.Agenda)">
                        Agenda
                    </button>
                </div>

                <button class="btn-today" @onclick="GoToToday">Today</button>
                <button class="btn-new-event" @onclick="CreateNewEvent">+ New Event</button>
                <button class="btn-settings" @onclick="OpenSettings">‚öôÔ∏è Settings</button>
                <button class="btn-refresh" @onclick="RefreshCalendar" disabled="@isRefreshing">
                    @if (isRefreshing)
                    {
                        <span class="spinner">‚ü≥</span>
                        <span>Syncing...</span>
                    }
                    else
                    {
                        <span>üîÑ Sync</span>
                    }
                </button>
            </div>
        </div>

        @if (calendars.Any())
        {
            <div class="calendar-badges">
                @foreach (var calendar in calendars.Where(c => c.IsEnabled))
                {
                    <span class="calendar-badge" style="border-left-color: @calendar.Color">
                        <span class="dot" style="background-color: @calendar.Color"></span>
                        @calendar.Name (@calendar.Events.Count)
                    </span>
                }
            </div>
        }

        @if (!string.IsNullOrEmpty(refreshMessage))
        {
            <div class="refresh-message">@refreshMessage</div>
        }
    </div>

    <div class="calendar-main">
        @if (currentView == CalendarViewModel.ViewMode.Month)
        {
            <MonthViewSimple Events="@events"
                            OnEventClicked="OnEventClicked"
                            OnDateSelected="OnDateSelected"
                            OnMonthChanged="LoadEventsAsync" />
        }
        else if (currentView == CalendarViewModel.ViewMode.Week)
        {
            <WeekView Events="@events"
                     OnEventClicked="OnEventClicked"
                     OnDateSelected="OnDateSelected"
                     OnWeekChanged="LoadEventsAsync" />
        }
        else if (currentView == CalendarViewModel.ViewMode.Agenda)
        {
            <AgendaView Events="@events"
                       OnEventClicked="OnEventClicked" />
        }
    </div>

    <!-- Event Details Panel -->
    <EventDetailsPanel IsOpen="@showEventDetails"
                      IsOpenChanged="@((value) => showEventDetails = value)"
                      Event="@selectedEvent" />

    <!-- Calendar Management Panel -->
    <CalendarManagementPanel IsOpen="@showSettings"
                           IsOpenChanged="@((value) => showSettings = value)"
                           Calendars="@calendars"
                           OnCalendarsChanged="OnCalendarsChanged" />
</div>

<style>
