        margin: 0;
        font-size: 1.25rem;
    }

    .close-btn {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #666;
        padding: 0;
        line-height: 1;
    }

    .close-btn:hover {
        color: #333;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .event-detail-row {
        margin-bottom: 1rem;
    }

    .event-detail-row strong {
        display: block;
        margin-bottom: 0.25rem;
        color: #666;
        font-size: 0.9rem;
    }

    .event-detail-row p {
        margin: 0.5rem 0 0 0;
        line-height: 1.5;
    }

    .birthday-banner {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #fff5f5;
        border: 2px solid #ff6b6b;
        border-radius: 6px;
        text-align: center;
        font-weight: 600;
        color: #ff6b6b;
    }
</style>

@code {
    private List<CalendarEvent> events = new();
    private List<CalendarConfiguration> calendars = new();
    private CalendarEvent? selectedEvent;
    private bool showEventDetails;
    private bool showSettings;
    private bool isRefreshing;
    private string refreshMessage = "";
    private DateTime currentMonth = DateTime.Today;
    private CalendarViewModel.ViewMode currentView = CalendarViewModel.ViewMode.Month;

    protected override async Task OnInitializedAsync()
    {
        await LoadCalendarsAsync();
        await LoadEventsAsync();
    }

    private async Task LoadCalendarsAsync()
    {
        try
        {
            calendars = await CalendarService.GetAllCalendarsAsync();
        }
        catch (Exception ex)
        {
            refreshMessage = $"Error loading calendars: {ex.Message}";
        }
    }

    private async Task LoadEventsAsync()
    {
        try
        {
            // Load events for current month with buffer
            var start = new DateTime(currentMonth.Year, currentMonth.Month, 1).AddMonths(-1);
            var end = start.AddMonths(3);

            events = await EventService.GetEventsAsync(start, end);
        }
        catch (Exception ex)
        {
            refreshMessage = $"Error loading events: {ex.Message}";
        }
    }

    private async Task RefreshCalendar()
    {
        if (isRefreshing) return;

        try
        {
            isRefreshing = true;
            refreshMessage = "";
            StateHasChanged();

            await SyncService.TriggerSyncAsync();
            await Task.Delay(1000); // Wait for sync

            await LoadCalendarsAsync();
            await LoadEventsAsync();

            refreshMessage = "‚úì Calendar refreshed successfully!";

            // Clear message after 3 seconds
            _ = Task.Run(async () =>
            {
                await Task.Delay(3000);
                await InvokeAsync(() =>
                {
                    refreshMessage = "";
                    StateHasChanged();
                });
            });
        }
        catch (Exception ex)
        {
            refreshMessage = $"‚úó Error: {ex.Message}";
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }

    private void GoToToday()
    {
        currentMonth = DateTime.Today;
        StateHasChanged();
    }

    private void SwitchView(CalendarViewModel.ViewMode newView)
    {
        currentView = newView;
        StateHasChanged();
    }

    private void OpenSettings()
    {
        showSettings = true;
        StateHasChanged();
    }

    private void OnEventClicked(CalendarEvent evt)
    {
        Navigation.NavigateTo($"/calendar/event/{evt.Id}");
    }

    private void CreateNewEvent()
    {
        Navigation.NavigateTo("/calendar/event/new");
    }

    private void OnDateSelected(DateTime date)
    {
        currentMonth = date;
        StateHasChanged();
    }

    private async Task OnCalendarsChanged()
    {
        await LoadCalendarsAsync();
        await LoadEventsAsync();
        StateHasChanged();
    }
}
