@code {
    [Parameter]
    public int? EventId { get; set; }

    private CalendarEvent? eventData;
    private CalendarEvent editEvent = new() { Title = "", ProviderKey = "", CalendarId = "", Source = "" };
    private List<CalendarConfiguration> calendars = new();

    private bool isNewEvent => EventId == null;
    private bool isLoading = true;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private bool showDeleteDialog = false;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCalendarsAsync();

        if (isNewEvent)
        {
            isEditing = true;
            isLoading = false;
            InitializeNewEvent();
        }
        else if (EventId.HasValue)
        {
            await LoadEventAsync();
        }
    }

    private void InitializeNewEvent()
    {
        var defaultCalendar = calendars.FirstOrDefault(c => c.IsDefault) ?? calendars.FirstOrDefault();

        editEvent = new CalendarEvent
        {
            Title = "",
            ProviderKey = Guid.NewGuid().ToString(),
            CalendarId = defaultCalendar?.CalendarId ?? "",
            Source = "Local",
            StartUtc = DateTime.Today.AddHours(DateTime.Now.Hour + 1),
            EndUtc = DateTime.Today.AddHours(DateTime.Now.Hour + 2),
            IsAllDay = false,
            CreatedUtc = DateTime.UtcNow,
            UpdatedUtc = DateTime.UtcNow
        };
    }

    private async Task LoadCalendarsAsync()
    {
        try
        {
            calendars = await CalendarService.GetAllCalendarsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading calendars: {ex.Message}";
        }
    }

    private async Task LoadEventAsync()
    {
        try
        {
            isLoading = true;
            eventData = await EventService.GetEventAsync(EventId!.Value);

            if (eventData != null)
            {
                editEvent = CloneEvent(eventData);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading event: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private CalendarEvent CloneEvent(CalendarEvent source)
    {
        return new CalendarEvent
        {
            Id = source.Id,
            ProviderKey = source.ProviderKey,
            CalendarId = source.CalendarId,
            Title = source.Title,
            StartUtc = source.StartUtc,
            EndUtc = source.EndUtc,
            IsAllDay = source.IsAllDay,
            IsBirthday = source.IsBirthday,
            IsRecurring = source.IsRecurring,
            RecurrenceRule = source.RecurrenceRule,
            Source = source.Source,
            Description = source.Description,
            Location = source.Location,
            Organizer = source.Organizer,
            Attendees = source.Attendees?.ToList(),
            Status = source.Status,
            ResponseStatus = source.ResponseStatus,
            OnlineMeetingUrl = source.OnlineMeetingUrl,
            Color = source.Color,
            CreatedUtc = source.CreatedUtc,
            UpdatedUtc = DateTime.UtcNow
        };
    }

    private void EnableEdit()
    {
        isEditing = true;
        editEvent = CloneEvent(eventData!);
    }

    private void CancelEdit()
    {
        if (isNewEvent)
        {
            GoBack();
        }
        else
        {
            isEditing = false;
            editEvent = CloneEvent(eventData!);
            errorMessage = "";
        }
    }

    private async Task SaveEvent()
    {
        isSaving = true;
        errorMessage = "";

        try
        {
            if (isNewEvent)
            {
                var created = await EventService.CreateEventAsync(editEvent);
                Navigation.NavigateTo($"/calendar/event/{created.Id}");
            }
            else
            {
                await EventService.UpdateEventAsync(editEvent);
                eventData = editEvent;
                isEditing = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving event: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteDialog = true;
    }

    private void HideDeleteConfirmation()
    {
        showDeleteDialog = false;
    }

    private async Task DeleteEvent()
    {
        isDeleting = true;

        try
        {
            await EventService.DeleteEventAsync(EventId!.Value);
            Navigation.NavigateTo("/calendar");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting event: {ex.Message}";
            showDeleteDialog = false;
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/calendar");
    }
}
