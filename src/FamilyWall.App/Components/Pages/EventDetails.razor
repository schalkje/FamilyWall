@page "/calendar/event/{EventId:int}"
@page "/calendar/event/new"
@using Microsoft.EntityFrameworkCore
@using FamilyWall.Core.Models
@using FamilyWall.Services
@inject ICalendarEventService EventService
@inject ICalendarService CalendarService
@inject NavigationManager Navigation

<div class="event-details-page">
    <div class="page-header">
        <button class="btn-back" @onclick="GoBack">
            <span class="back-icon">‚Üê</span>
            <span>Back</span>
        </button>

        <div class="header-actions">
            @if (!isEditing && eventData != null && !isNewEvent)
            {
                <button class="btn-edit" @onclick="EnableEdit">
                    ‚úèÔ∏è Edit
                </button>
                <button class="btn-delete" @onclick="ShowDeleteConfirmation">
                    üóëÔ∏è Delete
                </button>
            }
        </div>
    </div>

    <div class="page-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner-large">‚ü≥</div>
                <div class="loading-text">Loading event details...</div>
            </div>
        }
        else if (eventData == null && !isNewEvent)
        {
            <div class="error-state">
                <div class="error-icon">‚ö†Ô∏è</div>
                <div class="error-title">Event Not Found</div>
                <div class="error-text">The event you're looking for doesn't exist or has been deleted.</div>
                <button class="btn-primary" @onclick="GoBack">Go Back</button>
            </div>
        }
        else
        {
            <EventEditForm Event="@editEvent"
                          IsEditing="@isEditing"
                          AvailableCalendars="@calendars"
                          OnSave="SaveEvent"
                          OnCancel="CancelEdit"
                          IsSaving="@isSaving"
                          ErrorMessage="@errorMessage" />
        }
    </div>

    @if (showDeleteDialog)
    {
        <div class="modal-overlay" @onclick="HideDeleteConfirmation">
            <div class="modal-dialog" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Delete Event</h3>
                    <button class="close-btn" @onclick="HideDeleteConfirmation">‚úï</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this event?</p>
                    <p><strong>@eventData?.Title</strong></p>
                    <p class="warning-text">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" @onclick="HideDeleteConfirmation">Cancel</button>
                    <button class="btn-danger" @onclick="DeleteEvent" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner">‚ü≥</span>
                            <span>Deleting...</span>
                        }
                        else
                        {
                            <span>Delete Event</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    }
</div>

